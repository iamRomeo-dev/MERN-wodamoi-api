{
  "name": "wodamoiapi",
  "version": "1.0.0",
  "main": "./src/index.js",
  "author": "Romeo Brilland <romeo.brilland@live.fr>",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "nodemon --exec \"babel-node -r dotenv-defaults/config src/index.js\"",
    "build": "babel src --delete-dir-on-start --out-dir dist --ignore \"src/**/*.test.js\"",
    "start": "cross-env NODE_ENV=production node -r dotenv-defaults/config dist/index.js",
    "test": "is-ci && jest --ci --forceExit || jest --watch --forceExit",
    "lint": "eslint src",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.9.0",
    "@hapi/boom": "^9.1.4",
    "@types/jest": "^27.4.1",
    "async-retry": "^1.3.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.28.0",
    "dotenv-defaults": "^5.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^6.1.1",
    "express-rate-limit": "^5.5.1",
    "got": "^12.0.2",
    "helmet": "^4.6.0",
    "jwks-rsa": "^2.0.5",
    "lodash": "^4.17.21",
    "lru-cache": "^6.0.0",
    "mock-jwks": "^1.0.3",
    "mongoose": "^6.2.7",
    "morgan": "^1.10.0",
    "nock": "^13.2.4",
    "ora": "^6.1.0",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/node": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@shelf/jest-mongodb": "^2.2.1",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.2",
    "eslint-plugin-prettier": "^4.0.0",
    "is-ci": "^3.0.1",
    "jest": "^27.5.1",
    "jest-express": "^1.12.0",
    "jest-runner-eslint": "^1.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "supertest": "^6.2.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:jest/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "ignoreRestSiblings": true
        }
      ]
    },
    "env": {
      "node": true,
      "es6": true
    }
  },
  "prettier": {
    "printWidth": 100
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "4.4.0"
    }
  },
  "jest": {
    "projects": [
      {
        "preset": "@shelf/jest-mongodb",
        "displayName": "test",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
          "<rootDir>/src/setupTests.js"
        ]
      },
      {
        "displayName": "lint",
        "runner": "jest-runner-eslint",
        "testMatch": [
          "<rootDir>/src/**/*.js"
        ]
      }
    ]
  }
}
